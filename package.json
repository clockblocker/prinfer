{
	"name": "prinfer",
	"version": "0.5.2",
	"description": "TypeScript type inference inspection tool",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"bin": {
		"prinfer": "./dist/cli.js",
		"prinfer-mcp": "./dist/mcp.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "bun run tsup",
		"test": "bun test",
		"ci": "bun run build && bunx biome check . && bun test",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "bun run build && changeset publish",
		"prepublishOnly": "bun run ci",
		"prepare": "simple-git-hooks",
		"postinstall": "[ ! -f ./dist/postinstall.js ] || node ./dist/postinstall.js"
	},
	"simple-git-hooks": {
		"pre-commit": "bunx biome check ."
	},
	"keywords": [
		"typescript",
		"type-inference",
		"types",
		"inspection",
		"cli"
	],
	"author": "",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": ""
	},
	"peerDependencies": {
		"typescript": ">=4.7.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"bun-types": "latest",
		"simple-git-hooks": "^2.13.1",
		"tsup": "^8.0.0",
		"typescript": "^5.0.0"
	},
	"engines": {
		"bun": ">=1.0.0"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.25.3",
		"zod": "^4.3.6"
	}
}
